<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Acción para abrir la vista de estate.property -->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Propiedades</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Vista árbol (lista) -->
    <record id="estate_property_list_view" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="active"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
                <field name="garden"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Vista formulario -->
    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Propiedad">

                <header>
                    <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold,canceled"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="date_availabality"/>
                        <field name="expected_price"/>
                        <field name="selling_price"/>
                        <field name="active"/>
                        <field name="state"/>
                    </group>

                    <group string="Detalles">
                        <field name="bedrooms"/>
                        <field name="living_area"/>
                        <field name="facades"/>
                        <field name="garage"/>
                        <field name="garden"/>
                        <field name="garden_area"/>
                        <field name="garden_orientation"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
