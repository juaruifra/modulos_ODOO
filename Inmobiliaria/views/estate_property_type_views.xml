<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista lista -->
    <record id="estate_property_type_list_view" model="ir.ui.view">
        <field name="name">estate.property.type.list</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Vista formulario -->
    <record id="estate_property_type_form_view" model="ir.ui.view">
        <field name="name">estate.property.type.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Tipo de propiedad">

                <sheet>
                    <!-- botón estadístico -->
                    <div class="oe_button_box" name="button_box">
                        <button
                            type="action"
                            name="%(estate_property_offer_action)d"
                            class="oe_stat_button"
                            icon="fa-tags"
                            title="Offers">
                            
                            <field name="offer_count" widget="statinfo"/>
                        </button>
                    </div>
                    
                    <h1>
                        <field name="name"/>
                    </h1>

                    <notebook>
                        <page string="Properties">
                            <field name="property_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="expected_price"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                    </notebook>

                </sheet>

                


            </form>
        </field>
    </record>

    <!-- Acción -->
    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Tipos de propiedad</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
