<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Vista de lista de servicios -->
    <record id="view_peluqueria_servicio_list" model="ir.ui.view">
        <field name="name">peluqueria.servicio.list</field>
        <field name="model">peluqueria.servicio</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" width="300"/>
                <field name="precio_base"/>
                <field name="duracion"/>
                <field name="activo"/>
            </list>
        </field>
    </record>

    <!-- Vista de formulario de servicios -->
    <record id="view_peluqueria_servicio_form" model="ir.ui.view">
        <field name="name">peluqueria.servicio.form</field>
        <field name="model">peluqueria.servicio</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="precio_base"/>
                        <field name="duracion"/>
                        <field name="activo"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- AcciÃ³n que abre la lista de servicios -->
    <record id="action_peluqueria_servicio" model="ir.actions.act_window">
        <field name="name">Servicios</field>
        <field name="res_model">peluqueria.servicio</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
